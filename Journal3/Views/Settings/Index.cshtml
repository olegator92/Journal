@model Journal3.Models.Setting
@{
    ViewBag.Title = "Укажите путь к файлу";
}
<h2>@ViewBag.Title </h2>

<hr />
@using (Html.BeginForm("Index", "Settings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label" for="Name">Путь:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" value="@(Model != null ? Model.FilePath : "")" name="filePath" style="width: 400px; max-width: 400px;"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Сохранить" />
        </div>
    </div>
}
