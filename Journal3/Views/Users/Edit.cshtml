@model Journal3.Models.RegisterViewModel
@{
    ViewBag.Title = "Редактировать график работы";
}

@Html.Partial("_HeaderPartial")

@using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Partial("_EditPartial")

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Model.Email
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Редактировать" />
        </div>
    </div>
}
